        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const responseJson = pm.response.json();",
                  "if (responseJson.metadata && responseJson.metadata.tokens) {",
                  "    pm.environment.set('accessToken', responseJson.metadata.tokens.accessToken);",
                  "    pm.environment.set('refreshToken', responseJson.metadata.tokens.refreshToken);",
                  "    pm.environment.set('userId', responseJson.metadata.user.userId);",
                  "}",
                  ""
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
